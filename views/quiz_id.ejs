<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quizzards</title>
  <%- include('partials/_scripts') %>
</head>

<body class="body-override">
  <%- include('partials/_header') %>
  <%- include('partials/_newQuiz') %>
  <div id="quiz-attempt">
    <h1 id="quiz-name">
      <%= quiz.name %>
    </h1>
    <form id="quiz-form" method="POST" action="/response/<%= quizId %>">
      <% for (let question of questions) { %>
      <div class="question-card">
        <h2><%= question.text %></h2>
        <% for (let answer of question.answers) { %>
        <input type="radio" id="<%= answer.id %>" value="<%= answer.id %>" name="<%= question.id %>" required>
        <label for="<%= answer.id %>" required><%= answer.choice %></label><br />
        <% } %>
      </div>
      <% } %>
      <button class="quizSubmit btn btn-outline-primary btn-lg">Submit</button>
    </form>
  </div>
  <section id="results-container"></section>
  <div id="url-container">
    <label for="copy-url-button">Share this quiz</label>
    <button data-quizid="<%= quiz.id%>" id="copy-url-button" class="btn btn-outline-primary"><i class="fa fa-link"
        aria-hidden="true"></i> Copy Link</button>
  </div>
  </div>
  <%- include('partials/_footer') %>
</body>
</html>
<!-- Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
  integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
</body>

</html>
