<header>
  <nav id="navigation">
    <div class="logo">
      <i class="fas fa-hat-wizard fa-5x"></i>
    </div>
    <div class="title">
      <h1>QUIZZARDS</h1>
    </div>
    <div class="form-container">
      <div class="greeting">
        <% if(user){ %>
        <h4>Hello, <%= user.name %>!</h4>
      </div>

      <button id="get_all_quizzes" class="btn btn-outline-dark">All quizzes</button>
      <button id="get_my_quizzes" class="btn btn-outline-dark">My quizzes</button>


      <form action="/logout" method="POST">
        <button type="submit" class="btn btn-outline-dark">Logout</button>
      </form>
      <div class="create_new">
        <button id="create_new_quiz" type="submit" class="btn btn-outline-dark">Create New Quiz</button>
      </div>
      <% } else { %>
      <form action="/login" method="GET">
        <button type="submit" class="btn btn-outline-dark">Login</button>
      </form>
      <form action="/register" method="GET">
        <button type="submit" class="btn btn-outline-dark">Register</button>
      </form>
    </div>
    <% } %>
  </nav>
</header>

